---
import "simpledotcss/simple.min.css";
interface Props {
	title: string;
}
const { title } = Astro.props;
---

<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width,initial-scale=1,shrink-to-fit=no"
		/>
		<meta name="generator" content={Astro.generator} />
		<link
			rel="icon"
			type="image/svg+xml"
			href={import.meta.env.BASE_URL + "favicon.svg"}
		/>
		<title>
			{`mdblank個人メモ${title !== undefined ? " | " + title : ""}`}
		</title>
	</head>
	<body>
		<main>
			<style>
				:global(p) {
					text-align: justify;
					text-indent: 0.8em;
				}
			</style>
			<slot />
		</main>
		<div
			id="cNsR"
			style={{
				position: "fixed",
				height: "3rem",
				width: "3rem",
				borderRadius: "1.5rem",
				backgroundColor: "#3D5AFE",
				color: "#dcdcdc",
				bottom: "1.5rem",
				right: "1.5rem",
				display: "flex",
				justifyContent: "center",
				alignItems: "center",
				filter: "drop-shadow(.5ex .5ex 10px rgba(0,0,0,50%))",
				userSelect: "none",
				cursor: "pointer",
			}}
		>
		</div>
	</body>
	<script>
		import setup from "./quiz.ts";
		setup(document.getElementById("cNsR"));
	</script>
</html>
